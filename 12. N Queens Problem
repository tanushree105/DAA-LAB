#include <stdio.h>
#include <stdbool.h>

int count = 0;
void solve(int n, int row, bool cols[],bool diag1[], bool diag2[]){
	if(row == n){
		count++;
		return;
	}

	for (int col=0;col < n;col++){
		if(cols[col] || diag1[row - col + n - 1] || diag2[row + col])
			continue;
		cols[col] = diag1[row - col + n - 1] = diag2[row + col] = true;
		solve(n,row+1,cols,diag1,diag2);
		cols[col] = diag1[row-col + n - 1] = diag2[row + col] = false;
	}
}
int nQueen(int n){
	count = 0;
	if(n<2 || n>10)
		return 0;
	bool cols[10]={false};
	bool diag1[19]={false};
	bool diag2[19]={false};
	solve(n,0,cols,diag1,diag2);
	return count;
}
int main(){
	int n;
	scanf("%d",&n);
	int result = nQueen(n);
	printf("%d\n",result);
	return 0;
}
